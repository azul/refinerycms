%li.clearfix.record{:class => cycle("on", "on-hover"), :id => dom_id(shop)}
  %span.title
    =h shop.title
    %span.preview &nbsp;
  
  %span.actions
    = link_to refinery_icon_tag("application_go.png"), shop_url(shop),
        :title => t('.view_live'),
        :target => "_blank"
    = link_to refinery_icon_tag("application_edit.png"), edit_admin_shop_path(shop),
         :title => t('.edit')
    = link_to refinery_icon_tag("delete.png"), admin_shop_path(shop),
        :class => "cancel confirm-delete",
        :title => t('.delete')
  

