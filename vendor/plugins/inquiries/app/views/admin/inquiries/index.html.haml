= render :partial => "submenu"
#records
  - if searching?
    %h2= t('admin.search_results_for', :query => h(params[:search]))
    - if @inquiries.any?
      = render :partial => "inquiry", :collection => @inquiries
    - else
      %p= t('admin.search_no_results')
  - else
    - if @grouped_inquiries.any?
      - @grouped_inquiries.each do |container|
        %h3= l((inquiry_group = container.last).first.created_at)
        %ul
          = render :partial => 'inquiry', :collection => inquiry_group
    - else
      %p
        %strong= t('.no_inquiries')
