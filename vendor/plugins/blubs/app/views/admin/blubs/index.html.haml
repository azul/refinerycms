%div#actions
  %ul
    %li
      = render :partial => "/shared/admin/search", :locals => {:url => admin_blubs_url}
    %li
      = link_to "Create New Blub", new_admin_blub_url,
        :class => "add_icon"
  - if !searching? and Blub.count > 1
    %li
      = link_to t('refinery.reorder', :what => "Blubs"), admin_blubs_url,
        :id => "reorder_action",
        :class => "reorder_icon"
      = link_to t('refinery.reorder_done', :what => "Blubs"), admin_blubs_url,
        :id => "reorder_action_done",
        :style => "display: none;",
        :class => "reorder_icon"

%div#records
  - if searching?
    %h2= t('admin.search_results_for', :query => params[:search])
    - if @blubs.any?
      = render :partial => "blub", :collection => @blubs
    - else
      %p= t('admin.search_no_results')

  - else
    - if @blubs.any?
      = will_paginate @blubs, :previous_label => '&laquo;', :next_label => '&raquo;'
      = render :partial => "sortable_list"
      = will_paginate @blubs, :previous_label => '&laquo;', :next_label => '&raquo;'
    - else
      %p
        %strong
          = t('.no_items_yet')

= render :partial => "/shared/admin/make_sortable", :locals => {:tree => false } if !searching? and Blub.count > 1
