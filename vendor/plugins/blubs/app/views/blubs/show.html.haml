- content_for :body_content_title do
  = @blub.name


- content_for :body_content_left do
  
  %div
    %h3Name
    = @blub.name
  
  %div
    %h3Description
    = @blub.description
  
  %div
    %h3Bla
    = @blub.bla_id
  


- content_for :body_content_right do
  %h2= t('.other')
  %ul#blubs
    - @blubs.each do |blub|
      %li
        = link_to blub.name, blub_url(blub)

= render :partial => "/shared/content_page"
