- content_for :body_content_title do
  = @product.title


- content_for :body_content_left do
  
  %div
    %h3 Title
    = @product.title
  
  %div
    %h3 Description
    = @product.description
  
  %div
    %h3 Long Description
    = @product.long_description
  
  %div
    %h3 Image
    = image_fu @product.image, nil
  
  %div
    %h3 Price
    = @product.price
  
  %div
    %h3 Ship Info
    = @product.ship_info_id
  
  %div
    %h3 Legal Info
    = @product.legal_info_id
  
  %div
    %h3 Items
    = @product.items
  
  %div
    %h3 Availability
    = @product.availability_id
  


- content_for :body_content_right do
  %h2= t('.other')
  %ul#products
    - @products.each do |product|
      %li
        = link_to product.title, product_url(product)

= render :partial => "/shared/content_page"
