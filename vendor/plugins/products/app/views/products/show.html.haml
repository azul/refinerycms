- content_for :body_content_title do
  = @product.title


- content_for :body_content_left do
  
  %div
    %h3 Title
    = @product.title
  
  %div
    %h3 Description
    = @product.description
  
  %div
    %h3 Long Description
    = @product.long_description
  
  %div
    %h3 Image
    = image_fu @product.image, :grid
  
  %div
    %h3 Price
    = @product.price
  
  %div
    %h3 Ship Info
    = @product.ship_info_id
  
  %div
    %h3 Legal Info
    = @product.legal_info_id
  
  %div
    %h3 Items
    = @product.items
  
  %div
    %h3 Availability
    = @product.availability_id
  

    

- content_for :body_content_right do

  %div
    %h3 Shop Info
    = @product.shop.title
    %h3 Vendor Info
    = @product.shop.user.login
  %h2 More Products
  %ul#more_products
    = render @more_products
   
  %h2= t('.other')
  %ul#products
    = render @similar_products

= render :partial => "/shared/content_page"
